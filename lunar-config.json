{
  // For local development - specify which scripts to load
  "local_scripts": ["common", "druid_resto_pvp_mop"],
  "scripts": {
    // Common utilities loaded by all scripts
    "common": {
      "modules": [
        "init",
        "util/spells/racials",
        "gui/init",
        "gui/tab/offensives",
      ]
      // No filters = loads for all classes/specs/expansions
    },
    // Druid Restoration for MoP PvP
    "druid_resto_pvp_mop": {
      "modules": [
        "mop/druid/spells",
        "mop/druid/resto/spells/heal/lifebloom",
        "mop/druid/resto/actor"
      ],
      "class_specs": ["11_4"],  // Druid Restoration
      "xpac": ["mop"]           // Mists of Pandaria
    }
  }
}
